{
    "name": "crynux-image-generator",
    "description": "Generate Stable Diffusion images using Crynux Network",
    "version": "0.1.0",
    "author": "lukew@crynux.ai",
    "private": false,
    "main": "main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test:unit": "vitest",
        "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
        "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
        "format": "prettier --write src/",
        "electron:start": "NODE_OPTIONS='' electron .",
        "electron:build:win": "electron-builder -w",
        "electron:build:mac": "electron-builder -m"
    },
    "dependencies": {
        "@ant-design/icons-vue": "^6.1.0",
        "ant-design-vue": "^3.2.20",
        "axios": "^1.4.0",
        "json-bigint": "^1.0.0",
        "pinia": "^2.1.3",
        "pinia-plugin-persistedstate": "^3.1.0",
        "uuid": "^9.0.0",
        "vue": "^3.3.4",
        "vue-router": "^4.2.2"
    },
    "devDependencies": {
        "@rushstack/eslint-patch": "^1.2.0",
        "@vitejs/plugin-vue": "^4.2.3",
        "@vue/eslint-config-prettier": "^7.1.0",
        "@vue/test-utils": "^2.3.2",
        "cypress": "^12.14.0",
        "electron": "^25.2.0",
        "electron-builder": "^24.4.0",
        "eslint": "^8.39.0",
        "eslint-plugin-cypress": "^2.13.3",
        "eslint-plugin-vue": "^9.11.0",
        "jsdom": "^22.1.0",
        "prettier": "^2.8.8",
        "start-server-and-test": "^2.0.0",
        "stylus": "^0.59.0",
        "stylus-loader": "^7.1.3",
        "vite": "^4.3.9",
        "vitest": "^0.32.0"
    },
    "build": {
        "appId": "ai.crynux.ig_web",
        "productName": "Crynux Image Generator",
        "artifactName": "crynux_image_generator_v${version}_${platform}_x64.${ext}",
        "files": [
            "dist/**/*",
            "!node_modules/**/*",
            "main.js",
            "preload.js"
        ],
        "mac": {
            "hardenedRuntime": true,
            "gatekeeperAssess": false
        },
        "win": {
            "target": "portable"
        },
        "nsis": {
            "perMachine": true
        },
        "directories": {
            "output": "dist-electron"
        }
    }
}
